---
import { galleryData } from "./data.ts";
---

<section class="max-w-screen-2xl mx-auto">
  <div class="mb-12">
    <h2 class="text-[48px] lg:text-4xl font-bold text-neutral-100 mb-4">
      Galer√≠a
    </h2>
  </div>
  <div
    class="pswp-gallery grid grid-cols-12 grid-rows-2 max-w-screen-xl mx-auto rounded-2xl gap-2 overflow-hidden"
    id="my-gallery"
  >
    {
      galleryData.map((item) => (
        <a
          href={item.src}
          data-pswp-width={item.width}
          data-pswp-height={item.height}
          style={{ ...item.style }}
        >
          <img
            src={item.src}
            alt={item.alt}
            width={item.width}
            height={item.height}
            style={{ "object-fit": "cover", width: "100%", height: "100%" }}
          />
        </a>
      ))
    }
  </div>
</section>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  import "photoswipe/style.css";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#my-gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>

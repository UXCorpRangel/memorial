---
import { donationsData } from './data.js';
import Button from "@components/Button.astro";
---

<section class="w-full pt-28 pb-20 max-w-screen-2xl mx-auto">
  <div>
    <div class="flex flex-col lg:flex-row gap-28 items-center">
      <!-- Imagen -->
      <div class="flex flex-col items-center gap-4">
        <div class="relative overflow-hidden w-auto">
          <img
            src={donationsData.image.src}
            alt={donationsData.image.alt}
            loading="lazy"
            class="w-[228px] h-auto"
          />
        </div>
        <p class="text-white font-bold text-[48px]">Donaci√≥n</p>
      </div>

      <!-- Contenido -->
      <div class="space-y-6">
        <div class="space-y-4">
          <p class="text-[24px] text-white leading-relaxed">
            {donationsData.description}
          </p>
        </div>

        <Button variant="primary">
          Donar al Paypal
        </Button>
      </div>
    </div>
  </div>
</section>
